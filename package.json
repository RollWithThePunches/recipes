{
  "name": "recipes",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=.*\\.test\\.tsx --testNamePattern=Accessibility",
    "test:nvda": "jest --testPathPattern=.*\\.test\\.tsx --testNamePattern=NVDA",
    "figma:sync": "node scripts/figma-sync.js sync",
    "figma:tokens": "node scripts/figma-sync.js tokens",
    "figma:assets": "node scripts/figma-sync.js assets",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset",
    "db:setup": "node scripts/setup-database.js",
    "db:local": "node scripts/setup-local-db.js",
    "db:seed-local": "node scripts/seed-recipes-local.js && node scripts/create-test-user-local.js",
    "db:sync-to-heroku": "node scripts/sync-db-to-heroku.js",
    "db:check-users": "node scripts/check-users.js",
    "db:check-favorites": "node scripts/check-favorites.js",
    "db:clear-favorites": "node scripts/clear-favorites.js",
    "deploy": "git push heroku main",
    "deploy:staging": "git push heroku main && echo 'Deployment to staging completed!'"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "postcss": "^8.5.6",
    "prisma": "^6.12.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.4",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "ts-jest": "^29.4.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
